<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.mit.au.spb.olga.catendar" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.events.CreateEventActivity"
            android:label="@string/create_event_title" >
        </activity>
        <activity
            android:name=".view.template.CreateWeekActivity"
            android:label="Create week">
        </activity>
        <activity
            android:name=".view.template.CreateTemplateActivity"
            android:label="Create template">
        </activity>
        <activity
            android:name=".view.events.AddEventForTemplateActivity"
            android:label="Create event">
        </activity>
        <activity
            android:name=".view.tasks.CreateTaskActivity"
            android:label="Create task">
        </activity>
        <activity
            android:name=".view.events.ChangeEventActivity"
            android:label="Change event">
        </activity>
        <activity
            android:name=".view.template.DeleteTemplateActivity"
            android:label="Delete template">
        </activity>
        <activity
            android:name=".view.tasks.CreatePlanActivity"
            android:label="Create Plan">
        </activity>
        <activity
            android:name=".view.tasks.AddTaskActivity"
            android:label="Add task">
        </activity>
    </application>
</manifest>
