<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_event_button"
        android:id="@+id/createEventButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onCreateEventClick"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/createEventButton"
        android:layout_alignRight="@+id/createEventButton"
        android:layout_alignEnd="@+id/createEventButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_list"
        android:id="@+id/taskListButton"
        android:layout_alignBottom="@+id/createEventButton"
        android:layout_toLeftOf="@+id/createEventButton"
        android:onClick="onTaskListClick"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/button"
        android:layout_alignTop="@+id/taskListButton"
        android:layout_toLeftOf="@+id/taskListButton"
        android:layout_toStartOf="@+id/taskListButton"
        android:onClick="onCalendarButtonClick" />

</RelativeLayout>
